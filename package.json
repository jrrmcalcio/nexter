{
  "name": "Nexter",
  "version": "1.0.0",
  "description": "Nexter webpage",
  "main": "index.js",
  "scripts": {
    "watch": "node-sass sass/main.scss css/style.css -w",
    "sync": "browser-sync start --proxy 'http://natours.test' --files='**/*'",
    "start": "npm-run-all --parallel sync watch",
    "compile": "node-sass sass/main.scss css/style.compile.css",
    "prefix": "postcss css/style.compile.css --use autoprefixer -b 'last 10 versions' -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build": "npm-run-all compile prefix compress"
  },
  "author": "Jonas",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
